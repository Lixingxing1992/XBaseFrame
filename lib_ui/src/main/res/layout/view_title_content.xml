<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
            style="@style/style_title_bg"
            android:id="@+id/layout_title_layout"
            android:minHeight="@dimen/dp_44"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/layout_title_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:minWidth="@dimen/dp_42"
                android:scaleType="centerInside"
                android:src="@mipmap/default_back"/>
        <TextView android:id="@+id/layout_title_text"
                  style="@style/style_title_text"
                  android:text=""/>
        <TextView android:id="@+id/layout_title_right_text"
                  android:visibility="gone"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginRight="@dimen/dp_15"
                  android:gravity="center"
                  android:textColor="#ffffff"
                  android:textSize="@dimen/sp_13"
                  android:layout_gravity="center_vertical|right"
                  android:minWidth="@dimen/dp_42"
                  android:text=""/>
        <ImageView android:id="@+id/layout_title_right"
                   android:visibility="gone"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_gravity="center_vertical|right"
                   android:minWidth="@dimen/dp_42"
                   android:scaleType="centerInside"/>
    </FrameLayout>
</merge>